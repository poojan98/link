<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="39dp"
        android:padding="20dp"
        android:text="Username" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="200dp"
        android:padding="20dp"
        android:text="Re-Password" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="155dp"
        android:padding="20dp"
        android:text="Password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:padding="20dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:padding="20dp"
        android:text="Age" />


    <EditText
        android:id="@+id/EditView4"
        android:layout_width="137dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/EditView5"
        android:layout_alignTop="@+id/textView4" />

    <EditText
        android:id="@+id/EditView5"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp" />

    <EditText
        android:id="@+id/EditView3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/EditView4"
        android:layout_marginTop="139dp" />

    <EditText
        android:id="@+id/EditView2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EditView4"
        android:layout_below="@+id/EditView1" />

    <EditText
        android:id="@+id/EditView1"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EditView4"
        android:layout_alignTop="@+id/textView1" />


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"
        android:layout_toEndOf="@+id/textView5"
        android:padding="20dp"
        android:text="Create Account" />

</RelativeLayout>